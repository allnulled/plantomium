{
  "name": "plantomium",
  "version": "0.0.1",
  "description": "Fully-equiped headless data-driven content management system",
  "main": "index.js",
  "scripts": {
    "build": "npm run control:reset-db && npm run docs && npm run test",
    "docs": "npm run docs:readme && npm run docs:reference",
    "docs:readme:view": "mdview -o README.html README.md",
    "docs:reference:view": "mdview -o REFERENCE.html REFERENCE.md",
    "docs:permissions:view": "mdview -o PERMISSIONS.html PERMISSIONS.md",
    "docs:todo:view": "mdview -o TODO.html TODO.md",
    "docs:changelog:view": "mdview -o CHANGELOG.html CHANGELOG.md",
    "docs:readme": "npm run docs:skm",
    "docs:reference": "node docs/reference.js",
    "docs:skm": "skemator compile \"docs/*.skm\" --png",
    "dev": "nodemon --exec 'npm run test' --ignore src/config --ignore src/rest --ignore src/router/rest.js -e js,json,ejs",
    "start": "node index.js",
    "test": "mocha test/*.test.js --bail",
    "test2": "npm run control:reset-db && npm run test",
    "cover": "nyc --reporter=html npm run test",
    "control:reset-db": "node ./src/control/reset-db.js"
  },
  "keywords": [],
  "author": "",
  "license": "GPLv3Affero",
  "dependencies": {
    "@allnulled/asynchandler": "0.0.1",
    "axios": "^0.19.2",
    "basic-filesystem-store": "0.0.7",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "colors": "^1.4.0",
    "dotenv": "^8.2.0",
    "dotenv-expand": "^5.1.0",
    "ejs": "^3.1.3",
    "express": "^4.17.1",
    "fs-extra": "^9.0.1",
    "import-fresh": "^3.2.1",
    "lifecycle-iterator": "0.0.1",
    "method-override": "^3.0.0",
    "multer": "^1.4.2",
    "mysql": "^2.18.1",
    "mysql-schema": "0.0.6",
    "mysql-schema-generator": "0.0.4",
    "nodemailer": "^6.4.11",
    "rimraf": "^3.0.2",
    "sqlstring": "^2.3.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "javadoc": "^2.0.0",
    "mocha": "^8.1.1",
    "nodelive": "^1.0.6",
    "nyc": "^15.1.0"
  }
}
